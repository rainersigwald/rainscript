<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <_UpdatescriptSourceFiles Include="wwwroot/ups/**/*.ups" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot/js/**" />
  </ItemGroup>

  <Target Name="CompileUpdateScript" 
          BeforeTargets="BeforeBuild">
    <Copy SourceFiles="@(_UpdatescriptSourceFiles)"
          DestinationFiles="@(_UpdatescriptSourceFiles -> 'wwwroot/js/%(Filename).js')" />

    <ItemGroup>
      <_TranspiledJSSourceFiles Include="@(_UpdatescriptSourceFiles -> 'wwwroot/js/%(Filename).js')" />
      <Content Include="@(_TranspiledJSSourceFiles)" />
    </ItemGroup>
  </Target>

</Project>
